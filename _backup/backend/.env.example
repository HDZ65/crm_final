# Server Configuration
PORT=3000

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_NAME=postgres
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=false

# Security Configuration
# WARNING: Set to true in production!
ENABLE_SECURITY=true

# Keycloak Configuration
KC_URL=http://localhost:8080
KC_REALM=your-realm
KC_CLIENT_ID=your-client-id
# KC_SECRET=your-client-secret

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Maileva API Configuration (optional)
MAILEVA_LOGIN=your-maileva-login
MAILEVA_PASSWORD=your-maileva-password
MAILEVA_CLIENT_ID=your-client-id
MAILEVA_CLIENT_SECRET=your-client-secret
MAILEVA_API_URL=https://api.maileva.com/v2
MAILEVA_USE_MOCK=true

# LLM gRPC Service Configuration (optional)
LLM_GRPC_ADDR=localhost:50051

# MCP Configuration (optional)
MCP_KEY=your-secure-mcp-key

# Redis Configuration (optional)
API_KEY_REDIS=your-secure-redis-api-key

# OAuth2 Configuration (optional)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth/callback/google

MICROSOFT_CLIENT_ID=your-app-id
MICROSOFT_CLIENT_SECRET=your-secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/oauth/callback/microsoft

# System Prompt (optional, for AI chatbot)
# DEFAULT_SYSTEM_PROMPT="Your system prompt here..."

# GoCardless Configuration (Direct Debit / SEPA payments)
# Get your access token from: https://manage.gocardless.com/developers
GOCARDLESS_ACCESS_TOKEN=your-access-token
GOCARDLESS_ENVIRONMENT=sandbox
GOCARDLESS_WEBHOOK_SECRET=your-webhook-secret

# Stripe Configuration (Card payments, Subscriptions)
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
