{
  "name": "crm-final",
  "version": "1.0.0",
  "description": "CRM Final - Multi-tenant White Label Partner Management System",
  "private": true,
  "workspaces": [
    "packages/*",
    "frontend",
    "services/*"
  ],
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn')!==-1)throw new Error('Use npm, not yarn')\"",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=@crm/proto --filter=@crm/shared --filter=@crm/grpc-utils",
    "build:services": "turbo run build --filter=./services/*",
    "build:service": "turbo run build --filter",
    "dev": "npm run docker:db && turbo run dev --filter=frontend",
    "start:dev": "turbo run start:dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "proto:build": "turbo run build --filter=@crm/proto",
    "proto:lint": "npm run lint --workspace=@crm/proto",
    "proto:format": "npm run format --workspace=@crm/proto",
    "db:create": "docker exec -i crm-postgres-main bash < scripts/docker-create-databases.sh",
    "db:migrate": "node scripts/db-setup.js migrate",
    "db:generate": "node scripts/db-setup.js generate",
    "db:status": "node scripts/db-setup.js status",
    "db:setup": "npm run db:create && npm run db:migrate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:db": "docker-compose up -d postgres-main",
    "docker:services": "docker-compose up -d",
    "docker:rebuild": "docker-compose up -d --build",
    "clean:docker": "docker-compose down -v --rmi local",
    "clean:all": "npm run clean && rm -rf packages/*/dist packages/*/node_modules services/*/dist services/*/node_modules frontend/node_modules frontend/.next"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/crm-final.git"
  },
  "keywords": [
    "crm",
    "white-label",
    "multi-tenant",
    "grpc",
    "nestjs",
    "nextjs",
    "microservices",
    "typescript",
    "turborepo"
  ],
  "author": "Your Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@bufbuild/buf": "^1.64.0",
    "dotenv": "^17.2.3",
    "pg": "^8.17.2",
    "turbo": "^2.7.6"
  }
}
