{
  "name": "@crm/shared",
  "version": "1.0.0",
  "description": "Shared utilities, constants, and types for CRM microservices",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "keywords": [
    "crm",
    "shared",
    "utilities"
  ],
  "author": "CRM Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "jest": "^30.2.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "typeorm": "^0.3.28"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s", "!**/*.spec.ts", "!**/index.ts"],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
