{
  "name": "@crm/service-core",
  "version": "1.0.0",
  "description": "Consolidated Core gRPC microservice (identity + clients + documents)",
  "author": "CRM Team",
  "private": true,
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "proto:clean": "rimraf proto/generated",
    "proto:generate": "mkdir -p proto/generated && cp ../../packages/proto/gen/ts/clients/clients.ts ./proto/generated/clients.ts && cp ../../packages/proto/gen/ts/organisations/users.ts ./proto/generated/users.ts && cp ../../packages/proto/gen/ts/organisations/organisations.ts ./proto/generated/organisations.ts && cp ../../packages/proto/gen/ts/documents/documents.ts ./proto/generated/documents.ts && cp ../../packages/proto/gen/ts/referentiel/referentiel.ts ./proto/generated/referentiel.ts && cp ../../packages/proto/gen/ts/dashboard/dashboard.ts ./proto/generated/dashboard.ts && cp ../../packages/proto/gen/ts/depanssur/depanssur.ts ./proto/generated/depanssur.ts",
    "prebuild": "npm run proto:clean && npm run proto:generate",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/datasource.ts",
    "migration:generate": "npm run typeorm -- migration:generate src/migrations/$npm_config_name",
    "migration:create": "npm run typeorm -- migration:create src/migrations/$npm_config_name",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:show": "npm run typeorm -- migration:show",
    "db:create": "ts-node src/scripts/create-database.ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@crm/proto": "file:../../packages/proto",
    "@crm/shared-kernel": "file:../../packages/shared-kernel",
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/microservices": "^11.1.12",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/schedule": "^6.1.1",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "pg": "^8.17.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.28",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
