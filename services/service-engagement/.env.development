# service-engagement - development Configuration
NODE_ENV=development

# Database (postgres-main, engagement_db database)
DB_HOST=postgres-main
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=engagement_db

# gRPC (single port for all protos: activites, notifications, email)
GRPC_PORT=50051
HTTP_PORT=3061

# NATS
NATS_URL=nats://nats:4222

# Redis (for caching/sessions)
REDIS_HOST=crm-redis
REDIS_PORT=6379

# Encryption (AES-256-GCM for mailbox + OAuth tokens)
ENCRYPTION_KEY=replace-with-32-byte-secret-key

# OAuth - Zoom
ZOOM_CLIENT_ID=zoom-client-id
ZOOM_CLIENT_SECRET=zoom-client-secret

# OAuth - Google
GOOGLE_CLIENT_ID=google-client-id
GOOGLE_CLIENT_SECRET=google-client-secret

# OAuth - Microsoft
MICROSOFT_CLIENT_ID=microsoft-client-id
MICROSOFT_CLIENT_SECRET=microsoft-client-secret
